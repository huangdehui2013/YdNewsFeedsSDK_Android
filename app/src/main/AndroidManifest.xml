<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yidian.geek">



    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".YdApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yidian.geek.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".page.NewsListAcitvity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.NewsPortalActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name=".page.NewsViewActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name=".page.ScrollViewActivity"
            android:theme="@style/Base.Theme.AppCompat.Light"/>
        <activity android:name=".page.CustomThemeNewsPortalActivity" />
        <activity android:name=".page.CustomThemeNewsPortalActivity2" />
        <activity android:name=".page.ExposePagerActivity" />
    </application>

</manifest>